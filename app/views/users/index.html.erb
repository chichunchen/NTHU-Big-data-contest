<div class="text-center">
  <h1>參賽者列表</h1>
</div>

<% if @users.blank? %>
  目前尚無媒合階段的使用者
<% else %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>名字</th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "詳細資訊", user_path(user) %>
        </td>
      </tr>
    <% end %>
  </table>

  <center>
    <%= will_paginate @users, previous_label: "上一頁", next_label: "下一頁",renderer: BootstrapPagination::Rails %>
  </center>
<% end %>
