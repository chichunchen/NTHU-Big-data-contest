<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label "學校" %>
      <%= f.search_field :school_cont, class: "form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :系所單位 %>
      <%= f.search_field :department_cont, class: "form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :年級 %>
      <%= f.select :grade_eq, options_for_select(1..10, params[:q][:grade_eq]), {prompt: "年級"}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.search_field :name_cont, class: "form-control", placeholder: "人名..." %>
  </div>

  <div class="form-group">
    <%= f.search_field :skills_name_cont, class: "form-control", placeholder: "技能..." %>
  </div>

  <div class="form-group">
    <%= f.search_field :experience_cont, class: "form-control", placeholder: "相關經驗..." %>
  </div>

  <%= f.submit "搜尋", class: "btn btn-default" %>
<% end %>
