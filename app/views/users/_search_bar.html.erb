<div class="users-search-form">
  <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.search_field :name_cont, class: "form-control", placeholder: "搜尋..." %>
    </div>

    <div class="form-group advanced-search">
      <%= f.label "School" %>
      <%= f.search_field :school_cont, class: "form-control" %>
    </div>

    <div class="form-group advanced-search">
      <%= f.label :department %>
      <%= f.search_field :department_cont, class: "form-control" %>
    </div>

    <div class="form-group advanced-search">
      <%= f.label :grade %>
      <%= f.search_field :grade_eq, class: "form-control" %>
    </div>

    <div class="form-group advanced-search">
      <%= f.label "Skills" %>
      <%= f.search_field :skills_name_cont, class: "form-control" %>
    </div>

    <div class="form-group advanced-search">
      <%= f.label :experience %>
      <%= f.search_field :experience_cont, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-default" %>
  <% end %>
</div>

<script>
  $('.advanced-search').hide();
</script>
