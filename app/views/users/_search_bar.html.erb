<%= form_tag search_users_path , :method => :get, :class => "users-search-form" do %>
  <div class="input-group">
    <input type="text" class="form-control", name="q" value="<%= params[:q] %>" placeholder="搜尋姓名、學校或系所關鍵字...">
    <span class="input-group-btn">
      <button type="submit" class="btn btn-default">
        搜尋
      </button>
    </span>
  </div>
<% end %>
