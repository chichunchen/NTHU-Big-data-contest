<% if @groups.blank? %>
  <br />
  <div class="alert alert-warning" role="alert">目前尚無隊伍</div>
<% else %>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Id</td>
        <td>Title</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><%= link_to(group.title, group_path(group)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
